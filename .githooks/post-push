#!/bin/bash

echo "🚀 Push completed! Starting deployment monitoring..."

# Function to check if command exists
command_exists() {
  command -v "$1" >/dev/null 2>&1
}

# Check if we're pushing to master
BRANCH=$(git rev-parse --abbrev-ref HEAD)
if [ "$BRANCH" != "master" ] && [ "$BRANCH" != "main" ]; then
  echo "ℹ️ Not pushing to main branch, skipping deployment monitoring"
  exit 0
fi

# Get the latest commit hash
COMMIT_SHA=$(git rev-parse HEAD)
echo "📦 Monitoring deployment for commit: ${COMMIT_SHA:0:7}"

if command_exists gh; then
  echo "👀 Watching GitHub Actions deployment..."
  echo "📍 You can also view at: https://github.com/$(gh repo view --json nameWithOwner -q .nameWithOwner)/actions"
  echo ""
  
  # Wait a moment for the workflow to start
  sleep 3
  
  # Watch the latest workflow run
  gh run watch --exit-status || {
    echo "❌ Deployment failed or was cancelled"
    echo "🔍 Check details at: https://github.com/$(gh repo view --json nameWithOwner -q .nameWithOwner)/actions"
    exit 1
  }
  
  echo "✅ Deployment completed successfully!"
  echo "🎉 Your Pi should now be running the latest version"
  
else
  echo "⚠️ GitHub CLI not installed"
  echo "💡 Install with: brew install gh"
  echo "🔗 Monitor deployment at: https://github.com/White-Plains-Gospel-Chapel/sermon-uploader/actions"
fi