# CI/CD Environment Configuration
# Configuration for running tests in continuous integration

# MinIO Configuration for CI
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=testuser
MINIO_SECRET_KEY=testpass123
MINIO_SECURE=false
MINIO_BUCKET=sermons-ci

# Public MinIO endpoint
MINIO_PUBLIC_ENDPOINT=
MINIO_PUBLIC_SECURE=false

# Discord Configuration (disabled in CI)
DISCORD_WEBHOOK_URL=

# File Processing Configuration
WAV_SUFFIX=_raw
AAC_SUFFIX=_streamable
BATCH_THRESHOLD=2

# Server Configuration
PORT=8002

# Performance Configuration for CI (Conservative)
MAX_CONCURRENT_UPLOADS=3
TEMP_DIR=/tmp/sermon-ci
CHUNK_SIZE=524288
MAX_UPLOAD_SIZE=1073741824

# Pi-Specific Configuration (Disabled in CI)
PI_OPTIMIZATION=false
MAX_MEMORY_MB=512
THERMAL_THROTTLING=false
THERMAL_THRESHOLD_C=85.0
GOGC=50
MAX_GOROUTINES=25

# Buffer Configuration
BUFFER_POOL_ENABLED=true
SMALL_BUFFER_SIZE=4096
MEDIUM_BUFFER_SIZE=16384
LARGE_BUFFER_SIZE=131072
HUGE_BUFFER_SIZE=524288

# I/O Configuration (Conservative for CI)
IO_BUFFER_SIZE=16384
ENABLE_ZERO_COPY=false
STREAMING_THRESHOLD=2097152

# Connection Configuration (Conservative)
MAX_IDLE_CONNS=3
MAX_CONNS_PER_HOST=2
CONN_TIMEOUT=15
KEEP_ALIVE=15

# CI-Specific Configuration
TEST_TIMEOUT=600
TEST_CONTAINER_MODE=true
TEST_SKIP_LARGE_FILES=true
TEST_CONCURRENT_LIMIT=10
TEST_PERFORMANCE_MODE=false